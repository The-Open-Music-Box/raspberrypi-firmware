[flake8]
exclude = .git,__pycache__,venv,env,.venv,.mypy_cache,.pytest_cache,site-packages,*.egg-info
max-line-length = 88
max-complexity = 10
statistics = True
count = True
ignore = 
    # Line break before binary operator (new PEP8 style)
    W503
    # Ignore line length errors in test files
    E501
    # Ignore complexity for now
    C901
    # Ignore unused variables in tests
    F841
    # Ignore f-string missing placeholders
    F541
    # Ignore undefined names (temporary)
    F821
