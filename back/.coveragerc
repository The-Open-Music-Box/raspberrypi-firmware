[run]
source = app
omit = 
    */tests/*
    */venv/*
    */site-packages/*
    app/src/config/test_config.py
    app/src/module/hardware/mock_*.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    raise ImportError
    except ImportError

[html]
directory = coverage_html_report

[xml]
output = coverage.xml
