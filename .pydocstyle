[pydocstyle]
# Ignore module docstrings (D100) and package docstrings (D104)
ignore = D100,D104,D107

# Add specific rules to enforce
add-select = D101,D102,D103,D200,D205,D400

# Only check .py files that don't start with 'test_'
match = (?!test_).*\.py

# Exclude tests, helpers, venv and third-party code
match-dir = ^(?!tests|helpers|venv|env|\.venv|site-packages|__pycache__|\.git).*
