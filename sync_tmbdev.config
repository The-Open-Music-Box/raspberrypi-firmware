#!/bin/bash
# TheOpenMusicBox Deployment Configuration
# Used by deploy.sh for production deployment

# Remote server directory (where to deploy on the server)
REMOTE_DIR="/home/admin/tomb"

# Release directory (local temporary directory for packaging)
RELEASE_DEV_DIR="release"

# SSH connection options (optional - only if needed)
# SSH_OPTS="-o StrictHostKeyChecking=no"
# SSH_KEY="/path/to/ssh/key"

# Rsync exclusion patterns
RSYNC_EXCLUDES=(
    --exclude='.git'
    --exclude='node_modules'
    --exclude='__pycache__'
    --exclude='*.pyc'
    --exclude='venv'
    --exclude='.pytest_cache'
    --exclude='logs'
    --exclude='*.log'
    --exclude='.env.local'
    --exclude='coverage_html_report'
    --exclude='coverage.json'
    # CRITICAL: Protect user data from deletion
    --exclude='app/data/*.db'
    --exclude='app/data/*.db-wal'
    --exclude='app/data/*.db-shm'
    --exclude='app/data/uploads/'
)
